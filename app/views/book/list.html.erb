<body>

<div class="box">
<h1>All Books</h1>
<!---<h1>Book#list</h1>
<p>Find me in app/views/book/list.html.erb</p>--->

<% if @books.blank? %>
<p><h3>There are no books currently in our system.</h3></p>
<% else %>
<p><h3>These are the current books in our system</h3></p>


<table id="books">

<tr>
	<th>Name</th>
	<th>Actions</th>
</tr>	


<h4>There are <%=  Book.count %> books</h4>
<% @books.each do |c| %>


<tr>
	<td><%= link_to c.name, {:action => 'show',:controller => 'book', :id => c.id} -%></td>

    <td>
    	<button><%= link_to "Edit", action:'edit', id: c.id, class: "action edit" %></button>
    	
    	<button><%= link_to "Delete", action:'delete', id: c.id, class: "action delete" %></button>
    </td>


</tr>

<% end %>
</table>
<% end %>
<p><button><%= link_to "Add new Book", {:action => 'new',:controller => 'book'}%></button></p>
<p><button><%= link_to "Home", {:action => 'home',:controller => 'book'}%></button></p>

</div>
</body>
