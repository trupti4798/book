table{
	margin-left: auto;
	margin-right: auto;
}

button{
	border:1px solid;
	border-radius: 5px;
	font-size:15px;
}



.box{
	width:400px;
	height:800px;
	position:static;
	z-index:1;
	border:2px solid black;
	max-width:360px;
	margin-left:800px;
	padding:45px;
	text-align:center;
	width:60%;
	margin-top: 80px;
	
}

